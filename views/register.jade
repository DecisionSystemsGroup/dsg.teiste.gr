include ./vars.jade
doctype html
html
  head
    include ./includes/head.jade
    title Εγγραφή | Περιοχή Διαχείρισης - #{pageDesc}
  body
    .container
      .row.register-row
        .col-md-6.col-md-offset-3
          .page
            .title.text-center Εγγραφή στη Περιοχή Διαχείρισης

            if error
              p ERROR: #{error}

            form(method="post")
                input(type="hidden", name="_csrf", value=csrfToken)

                .form-group
                    input(class="form-control", type="text", id="username", name="username", placeholder="Εισαγωγή Username" required=true)

                .form-group
                    input(class="form-control", type="text", id="firstname", name="firstname", placeholder="Εισαγωγή Ονόματος" required=true)

                .form-group
                    input(class="form-control", type="text", id="lastname", name="lastname", placeholder="Εισαγωγή Επωνύμου" required=true)

                .form-group
                    input(class="form-control", type="email", id="e-mail", name="e-mail", placeholder="Εισαγωγή E-mail" required=true)
              
                .form-group
                    input(class="form-control", type="password", id="password", name="password", placeholder="Εισαγωγή Password" required=true)

                input(type="submit", class="btn btn-warning btn-lg", value="Εγγραφή")          

    include ./includes/footer.jade  
    include ./includes/scripts.jade
